<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.uga.cs.ugarideshareapp">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UGARideShareApp"
        tools:targetApi="31">
        <activity
            android:name=".activities.EditRideActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MyRideOffersActivity"
            android:exported="false" />
        <activity
            android:name=".activities.RidesRequestListActivity"
            android:exported="false" />
        <activity
            android:name=".activities.RidesListActivity"
            android:exported="false" /> <!-- Set LoginActivity as the launcher activity -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Other activities -->
        <activity
            android:name=".activities.ConfirmRideActivity"
            android:exported="false" />
        <activity
            android:name=".activities.RideDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.PostRideActivity"
            android:exported="false" />
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true" />
        <activity
            android:name=".activities.PostRideRequestActivity"
            android:exported="false" />
    </application>

</manifest>