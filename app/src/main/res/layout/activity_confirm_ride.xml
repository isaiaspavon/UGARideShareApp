<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView android:id="@+id/textViewFromConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="From:" />

    <TextView android:id="@+id/textViewToConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To:" />

    <TextView android:id="@+id/textViewDateTimeConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date/Time:" />

    <TextView android:id="@+id/textViewTypeConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type:" />

    <TextView android:id="@+id/textViewStatusConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status:" />

    <Button android:id="@+id/buttonConfirmRide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Ride"
        android:layout_marginTop="24dp"/>
</LinearLayout>
